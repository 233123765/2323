/* pages/index/index.wxss */
@import "../../styles/common.wxss";

.container {
  padding: 0 30rpx;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.search-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 搜索框样式 */
.search-container {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  margin-bottom: 20rpx;
}

.search-input-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 20rpx;
  height: 70rpx;
}

.search-icon-small {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  font-size: 28rpx;
}

.cancel-btn {
  margin-left: 20rpx;
  color: var(--primary-color);
  font-size: 28rpx;
}

/* 文章列表样式 */
.article-list {
  height: calc(100vh - 100rpx);
  padding-bottom: 100rpx;
}

.article-card {
  margin: 30rpx 0;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.article-image {
  width: 100%;
  height: 360rpx;
}

.article-info {
  padding: 20rpx;
}

.article-tag {
  margin-bottom: 16rpx;
}

.tag-text {
  display: inline-block;
  padding: 4rpx 16rpx;
  background-color: rgba(76, 175, 80, 0.1);
  color: var(--primary-color);
  font-size: 24rpx;
  border-radius: 20rpx;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.article-desc {
  font-size: 28rpx;
  color: var(--text-color-light);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 无搜索结果 */
.no-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-result-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-result-text {
  color: var(--text-color-light);
  font-size: 28rpx;
} 