/* pages/index/index.wxss */
.container {
  padding-bottom: 30rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 99;
}

.search-input {
  background-color: #f6f6f6;
  border-radius: 32rpx;
  padding: 12rpx 20rpx;
  flex: 1;
  display: flex;
  align-items: center;
}

.search-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.clear-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon image {
  width: 32rpx;
  height: 32rpx;
}

/* 分类标签 */
.category-scroll {
  background-color: #fff;
  white-space: nowrap;
  padding: 0 10rpx;
  height: 84rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  padding: 0 20rpx;
  height: 84rpx;
}

.category-item {
  padding: 0 20rpx;
  margin: 0 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #1296db;
  color: #fff;
}

/* 游戏列表 */
.game-list {
  padding: 20rpx;
}

.game-card {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  position: relative;
}

.game-cover {
  width: 220rpx;
  height: 220rpx;
  flex-shrink: 0;
}

.game-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.game-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  flex: 1;
}

.game-rating {
  font-size: 24rpx;
  color: #999;
}

.stars {
  color: #ddd;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.star.filled {
  color: #ffb400;
} 